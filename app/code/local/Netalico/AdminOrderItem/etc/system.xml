<?xml version="1.0"?>
<config>
    <sections>
        <cataloginventory>
            <groups>
                <adminorderitem module="netalico_adminorderitem" translate="label">
                    <label>Admin Order Item Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <allow_out_of_stock translate="label">
                            <label>Allow Out of Stock Items?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Allow admins to create orders which contain items marked <strong>Out of Stock</strong>.]]></comment>
                        </allow_out_of_stock>
                        <allow_disabled translate="label">
                            <label>Allow Disabled Items?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Allow admins to create orders which contain items with status of <strong>Disabled</strong>.]]></comment>
                        </allow_disabled>
                    </fields>
                </adminorderitem>
            </groups>
        </cataloginventory>
        <netalico_adminorderitem module="netalico_adminorderitem">
            <label>AdminOrderItem</label>
            <tab>netalico</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings>
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <comment><![CDATA[Configuration for this extension is located at: <strong>CATALOG</strong> &rsaquo; <strong>Inventory</strong>]]></comment>
                </settings>
            </groups>
        </netalico_adminorderitem>
    </sections>
</config>
